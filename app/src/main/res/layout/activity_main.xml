<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/scene_01"
        android:id="@+id/motion"
        tools:context=".MainActivity">


    <TextView
            android:background="@android:color/holo_orange_light"
            app:layout_constraintRight_toLeftOf="@+id/deletable1"
            app:layout_constraintLeft_toRightOf="@+id/controller"
            android:id="@+id/deletable2"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:maxLines="1"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Action 2"/>


    <TextView
            android:background="@android:color/holo_red_dark"
            android:id="@+id/deletable1"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/deletable2"
            android:text="Action 1"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Swipeable Content"
            android:gravity="center"
            android:id="@+id/sweepable"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@color/colorPrimary"/>

    <View android:layout_height="100dp"
          android:background="@android:color/darker_gray"
          android:id="@+id/controller"
          android:layout_width="100dp"/>




</androidx.constraintlayout.motion.widget.MotionLayout>